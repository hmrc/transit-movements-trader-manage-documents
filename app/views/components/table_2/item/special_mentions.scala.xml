@(specialMentions: viewmodels.SpecialMention)

<fo:block>
    @if(specialMentions.additionalInformationCoded.code.trim.nonEmpty) {
        @if(specialMentions.additionalInformationCoded.code.trim.length > 6) {
            <fo:inline>Export </fo:inline>
            <fo:inline font-weight="bold">
                @specialMentions.country.map(x => x)
            </fo:inline>
            <fo:inline>
                @specialMentions.additionalInformationCoded.code Export
            </fo:inline>
            @if(specialMentions.additionalInformationCoded.code.trim.nonEmpty) {
                <fo:inline>-
                    @specialMentions.additionalInformationCoded.description
                </fo:inline>
            }
        } else {
            @specialMentions.additionalInformationCoded.code
        }
    }
</fo:block>
