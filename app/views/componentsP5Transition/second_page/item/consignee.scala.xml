@(consignee: models.P5.departure.Consignee)

<fo:block>
    <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-number="1" column-width="44mm"/>
        <fo:table-column column-number="2" column-width="8mm"/>
        <fo:table-column column-number="3" column-width="38mm"/>
        <fo:table-body>
            <fo:table-row>
                <fo:table-cell number-columns-spanned="2" font-weight="bold"
                               display-align="center">
                    <fo:block>
                        @consignee.name.getOrElse("")
                    </fo:block>
                </fo:table-cell>
                <fo:table-cell font-weight="bold" display-align="center">
                    <fo:block>
                        @consignee.identificationNumber.getOrElse("")
                    </fo:block>
                </fo:table-cell>
            </fo:table-row>
            <fo:table-row>
                <fo:table-cell number-columns-spanned="2"
                               display-align="center" font-weight="bold">
                    <fo:block>
                        @consignee.Address.map(_.streetAndNumber)
                    </fo:block>
                </fo:table-cell>
                <fo:table-cell display-align="center" font-weight="bold">
                    <fo:block>
                        @consignee.Address.map(_.postcode.getOrElse(""))
                    </fo:block>
                </fo:table-cell>
            </fo:table-row>
            <fo:table-row>
                <fo:table-cell number-columns-spanned="2"
                               display-align="center" font-weight="bold">
                    <fo:block>
                        @consignee.Address.map(_.city)
                    </fo:block>
                </fo:table-cell>
                <fo:table-cell display-align="center" font-weight="bold">
                    <fo:block>
                        @consignee.Address.map(_.country)
                    </fo:block>
                </fo:table-cell>
            </fo:table-row>
        </fo:table-body>
    </fo:table>
</fo:block>
