@(consignor: Option[models.P5.departure.Consignor])

<fo:table-row height="5.33mm">
  <fo:table-cell display-align="center" padding-left="2mm">
    <fo:block>2 Consignor/Exporter</fo:block>
  </fo:table-cell>
  <fo:table-cell display-align="center"  padding-left="2mm">
    <fo:block>No    <fo:inline font-weight = "bold">@consignor.map(c => c.identificationNumber)</fo:inline></fo:block>
  </fo:table-cell>
  <fo:table-cell display-align="center" padding-left="2mm" font-weight="bold">
    <fo:block>
      @consignor.map(c => c.ContactPerson.map(_.phoneNumber))
    </fo:block>
  </fo:table-cell>
</fo:table-row>

<fo:table-row height="4.33mm">
<fo:table-cell number-columns-spanned="3" display-align="center" padding-left="2mm" font-weight="bold">
  <fo:block>
    @consignor.map(c => c.name)
  </fo:block>
</fo:table-cell>
</fo:table-row>

<fo:table-row height="4mm" padding-top = "2mm">
<fo:table-cell display-align="center" padding-left="2mm"   font-weight="bold">
  <fo:block>
    @consignor.map(c => c.Address.map(_.streetAndNumber))
  </fo:block>
</fo:table-cell>
<fo:table-cell display-align="center" padding-left="2mm" font-weight="bold">
  <fo:block>
    @consignor.map(c => c.Address.map(_.postcode.getOrElse("")))
  </fo:block>
</fo:table-cell>
<fo:table-cell display-align="center" padding-left="2mm" font-weight="bold">
  <fo:block>
    @consignor.map(c => c.ContactPerson.map(_.eMailAddress.getOrElse("")))
  </fo:block>
</fo:table-cell>
</fo:table-row>
