@(consignee: Option[models.P5.departure.Consignee])

<fo:table-row height="6.25mm">
  <fo:table-cell padding-left="2mm" display-align="center">
    <fo:block>8 Consignee</fo:block>
  </fo:table-cell>
  <fo:table-cell padding-left="2mm" display-align="center">
    <fo:block>No</fo:block>
  </fo:table-cell>
  <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
    <fo:block>
      @consignee.map(c => c.identificationNumber)
    </fo:block>
  </fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell padding-left="2mm" number-columns-spanned="3" font-weight="bold" display-align="center">
  <fo:block>
    @consignee.map(c => c.name)
  </fo:block>
</fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell number-columns-spanned="2" padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @consignee.map(c => c.Address.map(_.streetAndNumber))
  </fo:block>
</fo:table-cell>
<fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @consignee.map(c => c.Address.map(_.postcode.getOrElse("")))
  </fo:block>
</fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell number-columns-spanned="2" padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @consignee.map(c => c.Address.map(_.city))
  </fo:block>
</fo:table-cell>
<fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @consignee.map(c => c.Address.map(_.country))
  </fo:block>
</fo:table-cell>
</fo:table-row>
