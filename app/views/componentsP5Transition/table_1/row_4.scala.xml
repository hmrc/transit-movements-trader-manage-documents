@import views.xml.componentsP5Transition.table_1.consignee
@(printVariousConsignees: Boolean, consigneeOne: Option[models.P5.departure.Consignee], returnCopiesCustomsOffice: Option[viewmodels.ReturnCopiesCustomsOffice])

<fo:table-row height="25mm">
  <fo:table-cell>
    <fo:block/>
  </fo:table-cell>

  @consignee(printVariousConsignees, consigneeOne)

  <fo:table-cell alignment-adjust="auto" number-columns-spanned="5">
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column/>
        <fo:table-body>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center">
              <fo:block>Return copy has to be sent to the Office</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@returnCopiesCustomsOffice.map(office => office.customsOfficeName)</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@returnCopiesCustomsOffice.map(office => office.streetAndNumber)</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@returnCopiesCustomsOffice.map(office => office.postCode)</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@returnCopiesCustomsOffice.map(office => office.city)</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@returnCopiesCustomsOffice.map(office => office.country.code)</fo:block>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>
</fo:table-row>
