@(declarationType: String)
<fo:table-row>
  <fo:table-cell>
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-width="9.5mm"/>
        <fo:table-column column-width="6.5mm"/>
        <fo:table-column column-width="16mm"/>

        <fo:table-body>
          <fo:table-row height="7mm">
            <fo:table-cell border-right-style="solid" border-right-width="1pt" border-right-color="black" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
              <fo:block/>
            </fo:table-cell>
            <fo:table-cell border-right-style="solid" border-right-width="1pt" border-right-color="black" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
              <fo:block/>
            </fo:table-cell>
            <fo:table-cell text-align="center" display-align="after" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" padding-bottom="1mm">
              <fo:block font-weight="bold">
                @declarationType
              </fo:block>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>
</fo:table-row>
