@(consignor: Option[SecurityConsignor])

<fo:table-row height="6.25mm">
  <fo:table-cell display-align="center" padding-left="2mm">
    <fo:block>Consignor (security) (S04)</fo:block>
  </fo:table-cell>
  <fo:table-cell display-align="center" padding-left="2mm">
    <fo:block>No</fo:block>
  </fo:table-cell>
  <fo:table-cell display-align="center" padding-left="2mm" font-weight="bold">
    <fo:block>
      @consignor.map(c => c.eori.getOrElse(""))
    </fo:block>
  </fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell padding-left="2mm" number-columns-spanned="3" font-weight="bold" display-align="center">
  <fo:block>
    @consignor.map(c => c.name).getOrElse("---")
  </fo:block>
</fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell number-columns-spanned="2" padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @consignor.map(c => c.streetAndNumberTrimmed.getOrElse(""))
  </fo:block>
</fo:table-cell>
<fo:table-cell display-align="center" padding-left="2mm" font-weight="bold">
  <fo:block>
    @consignor.map(c => c.postCode.getOrElse(""))
  </fo:block>
</fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell number-columns-spanned="2" padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @consignor.map(c => c.city.getOrElse(""))
  </fo:block>
</fo:table-cell>
<fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @consignor.map(c => c.countryCode.getOrElse(""))
  </fo:block>
</fo:table-cell>
</fo:table-row>
