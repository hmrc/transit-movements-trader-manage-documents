@import views.xml.components.second_page.item
@import views.xml.components.second_page.header_table

@import cats.data.NonEmptyList

@this()

@(departureOffice: String, movementReferenceNumber: String, acceptanceDateFormatted: Option[String], goodsItems: NonEmptyList[viewmodels.GoodsItem], declarationType: DeclarationType, placeOfUnloadingCode: Option[String])

<fo:page-sequence master-reference="pages" initial-page-number="2" force-page-count="no-force"> <!-- SEQ 2 -->
    <fo:static-content flow-name="xsl-region-before">
        @header_table(departureOffice, movementReferenceNumber, acceptanceDateFormatted)
    </fo:static-content>
    <fo:flow flow-name="xsl-region-body">
        <fo:block>
            @goodsItems.toList.map(goodsItem => item.goods_item(goodsItem, declarationType, placeOfUnloadingCode))
        </fo:block>
        <fo:block id="A-last-page"/>
    </fo:flow>
</fo:page-sequence>
