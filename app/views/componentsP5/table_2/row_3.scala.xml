@import views.xml.componentsP5.table_1.consignee
        @import views.xml.componentsP5.table_1.total_gross_mass

        @(ie029Data: models.P5.departure.IE029Data)

<fo:table-row height="16mm">

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black"
                   border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-body>

                    <fo:table-row height="2mm">
                        <fo:table-cell margin-top="0.5mm" display-align="center" margin-left="0.5mm">
                            <fo:block>Supporting document [12 03]</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5mm">
                            <fo:block-container height="14mm" overflow="hidden">
                                <fo:block>@(ie029Data.supportingDocument)</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                    </fo:table-row>

                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>

    <fo:table-cell number-columns-spanned="5">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
              <fo:table-column column-number="1" column-width="55mm"/>
              <fo:table-column column-number="2" column-width="40mm"/>
              <fo:table-body>
                    <fo:table-row height="16mm">

                        <fo:table-cell number-columns-spanned="2">
                            <fo:block>
                                <fo:table width="100%" table-layout="fixed">

                                    <fo:table-body border-left-style="solid" border-left-width="1pt"
                                                   border-left-color="black" border-right-style="solid"
                                                   border-right-width="1pt" border-right-color="black">


                                        <fo:table-row>
                                            <fo:table-cell height="2mm" margin-top="0.5mm" display-align="center"
                                                           padding-left="1mm">
                                                <fo:block>Additional reference [12 04]</fo:block>

                                            </fo:table-cell>

                                        </fo:table-row>

                                        <fo:table-row>

                                            <fo:table-cell number-columns-spanned="2" margin-left="0.5mm" border-bottom-style="solid"
                                                           border-bottom-width="1pt" border-bottom-color="black">
                                                <fo:block-container height="6mm" overflow="hidden">
                                                    <fo:block>
                                                        @(ie029Data.additionalReference)
                                                    </fo:block>
                                                </fo:block-container>
                                            </fo:table-cell>
                                        </fo:table-row>

                                        <fo:table-row height="2.5mm">
                                            <fo:table-cell margin-top="0.5mm" display-align="center" margin-left="0.5mm">
                                                <fo:block>Additional information [12 02]</fo:block>
                                            </fo:table-cell>
                                            <fo:table-cell margin-bottom="0.5mm" margin-top="0.5mm" display-align="center"
                                                           margin-left="0.5mm" border-left-style="solid" border-left-width="1pt"
                                                           border-left-color="black" border-bottom-style="solid" border-bottom-width="1pt"
                                                           border-bottom-color="black">
                                                <fo:block>Transport charges [14 02] @(ie029Data.transportCharges)
                                                </fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>


                                        <fo:table-row>
                                            <fo:table-cell margin-left="0.5mm">
                                                <fo:block-container height="6mm" overflow="hidden">
                                                    <fo:block>@(ie029Data.additionalInformation)</fo:block>
                                                </fo:block-container>
                                            </fo:table-cell>
                                        </fo:table-row>


                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>

                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>

</fo:table-row>
