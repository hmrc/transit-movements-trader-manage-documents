                                            </fo:table-cell>
                                        </fo:table-row>



                                        <fo:table-row>
                                            <fo:table-cell margin-left="0.5mm" number-columns-spanned="2">
                                                <fo:block-container height="14mm" overflow="hidden">
                                                    <fo:block>@(viewModel.table2ViewModel.authorisation)</fo:block>
                                                </fo:block-container>
                                            </fo:table-cell>
                                        </fo:table-row>


                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>

                    </fo:table-row>
                </fo:table-body>
            </fo:table>

        </fo:block>
    </fo:table-cell>

</fo:table-row>
