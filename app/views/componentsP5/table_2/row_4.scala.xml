                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5mm"  border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
                            <fo:block-container height="10mm" overflow="hidden">
                                <fo:block>@(viewModel.table2ViewModel.guarantee)</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5mm">
                            <fo:block-container height="4mm" overflow="hidden">
                                <fo:block>
                                </fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                    </fo:table-row>

                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>

    <fo:table-cell number-columns-spanned="5">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
              <fo:table-column column-number="1" column-width="55mm"/>
              <fo:table-column column-number="2" column-width="40mm"/>
                <fo:table-body>
                    <fo:table-row height="16mm">
                        <fo:table-cell number-columns-spanned="2" border-left-style="solid" border-left-width="1pt"
                                       border-left-color="black" border-right-style="solid" border-right-width="1pt"
                                       border-right-color="black" border-top-style="solid" border-top-width="1pt"
                                       border-top-color="black" border-bottom-style="solid" border-bottom-width="1pt"
                                       border-bottom-color="black">
                            <fo:block>
                                <fo:table width="100%" table-layout="fixed">
                                    <fo:table-body>

                                        <fo:table-row height="2.5mm">
                                            <fo:table-cell margin-top="0.5mm" display-align="center" margin-left="0.5mm">
                                                <fo:block>Authorisation [12 12]</fo:block>
                                            </fo:table-cell>
