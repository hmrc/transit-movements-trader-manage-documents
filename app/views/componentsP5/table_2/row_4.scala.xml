                            <fo:block/>
                        </fo:table-cell>
                    </fo:table-row>
                    <fo:table-row height="4mm" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
                        <fo:table-cell display-align="center" margin-left="2mm">
                            <fo:block>Guarantee not valid for</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>


    <fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">

                <fo:table-body>

                    <fo:table-row height="2mm">
                        <fo:table-cell margin-top="0.5mm" display-align="center" margin-left="0.5mm">
