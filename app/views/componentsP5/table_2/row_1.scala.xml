                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"  padding-bottom="10%">
                            <fo:block-container height="13.5%" overflow="hidden">
                                <fo:block>
                                    @(viewModel.table2ViewModel.transportEquipment)
