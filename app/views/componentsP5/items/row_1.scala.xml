@import models.P5.departure.ConsignmentItem

@(item: models.P5.departure.ConsignmentItem)

<fo:table-row height="4mm">

  <fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black"
                 border-right-style="solid" border-right-width="1pt" border-right-color="black"
                 border-top-style="solid" border-top-width="1pt" border-top-color="black" border-bottom-style="solid"
                 border-bottom-width="1pt" border-bottom-color="black">
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-number="1" column-width="25%"/>
        <fo:table-column column-number="2" column-width="17%"/>
        <fo:table-column column-number="3" column-width="58%"/>

        <fo:table-body>
          <fo:table-row height="2mm" border-top-style="solid" border-top-width="1pt" border-top-color="black" border-left-style="solid" border-left-width="1pt" border-left-color="black">
            <fo:table-cell display-align="center" margin-left="0.5mm" border-right-style="solid" border-right-width="1pt" border-right-color="black">
              <fo:block>Decl. goods it Nr. . [11 11]</fo:block>
            </fo:table-cell>

            <fo:table-cell display-align="center" margin-left="0.5mm" border-right-style="solid" border-right-width="1pt" border-right-color="black">
              <fo:block>Goods it. Nr [11 03]</fo:block>
            </fo:table-cell>

            <fo:table-cell display-align="center" margin-left="0.5mm">
              <fo:block>Type of number of packages, shipping marks [18 06]</fo:block>
            </fo:table-cell>
          </fo:table-row>

          <fo:table-row >
            <fo:table-cell margin-left="0.5mm" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" border-right-style="solid" border-right-width="1pt" border-right-color="black" border-left-style="solid" border-left-width="1pt" border-left-color="black">
              <fo:block-container height="2mm" overflow="hidden">
                <fo:block>DEC GOODS</fo:block>
              </fo:block-container>
            </fo:table-cell>

            <fo:table-cell margin-left="0.5mm" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" border-right-style="solid" border-right-width="1pt" border-right-color="black">
              <fo:block-container height="2mm" overflow="hidden">
                <fo:block>Goods it</fo:block>
              </fo:block-container>
            </fo:table-cell>

            <fo:table-cell margin-left="0.5mm">
              <fo:block-container height="2mm" overflow="hidden">
                <fo:block>type of packages, shipping marks etc</fo:block>
              </fo:block-container>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>

  <fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black"
                 border-right-style="solid" border-right-width="1pt" border-right-color="black"
                 border-top-style="solid" border-top-width="1pt" border-top-color="black" border-bottom-style="solid"
                 border-bottom-width="1pt" border-bottom-color="black">
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-body>
          <fo:table-row height="2mm" border-top-style="solid" border-top-width="1pt" border-top-color="black" >
            <fo:table-cell display-align="center" margin-left="0.5mm">
              <fo:block>Description of goods [18 05]</fo:block>
            </fo:table-cell>
          </fo:table-row>

          <fo:table-row>
            <fo:table-cell margin-left="0.5mm">
              <fo:block-container height="2mm" overflow="hidden">
                <fo:block>Desc of goods 1</fo:block>
              </fo:block-container>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>
</fo:table-row>
