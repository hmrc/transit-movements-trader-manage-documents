@(lrn: String)
<fo:table-cell  alignment-adjust="auto" border-style="solid" border-width="1pt" border-color="black">
  <fo:block>
    <fo:table width="100%" table-layout="fixed">
      <fo:table-column/>
      <fo:table-column/>
      <fo:table-body>
        <fo:table-row height="4.5mm">
          <fo:table-cell number-columns-spanned="1">
            <fo:block margin-top="1mm" margin-left="1mm" font-size="5pt">LRN</fo:block>
          </fo:table-cell>
        </fo:table-row>
        <fo:table-row number-columns-spanned="4" height="4.5mm" padding-bottom="1mm">
          <fo:table-cell padding-left="1mm">
            <fo:block>
              @lrn
            </fo:block>
          </fo:table-cell>
        </fo:table-row>
      </fo:table-body>
    </fo:table>
  </fo:block>
</fo:table-cell>