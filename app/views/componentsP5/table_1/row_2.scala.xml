@import views.xml.componentsP5.table_1.consignor

@import views.xml.components.barcode

@(ie029Data: models.P5.departure.IE029Data)

<fo:table-row height="16mm">
  <fo:table-cell>
    <fo:block/>
  </fo:table-cell>

  <fo:table-cell padding-top="1mm" text-align="center" vertical-align="top" border-top-style="solid" border-top-width="1pt" border-top-color="black" border-left-style="solid" border-left-width="1pt" border-left-color="black">
    <fo:block/>
  </fo:table-cell>

  @consignor(ie029Data.consignor)

  <fo:table-cell>
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column/>

        <fo:table-body>

          <fo:table-row>
            <fo:table-cell>
              <fo:block>
                <fo:table width="100%" table-layout="fixed">
                  <fo:table-column column-width="16mm"/>
                  <fo:table-column column-width="16mm"/>

                  <fo:table-body>
                    <fo:table-row height="9mm">
                      @declaration_type(ie029Data.declarationType)
                      @additional_declaration_type(ie029Data.additionalDeclarationType)
                    </fo:table-row>
                  </fo:table-body>
                </fo:table>
              </fo:block>
            </fo:table-cell>
          </fo:table-row>


          <fo:table-row>
            <fo:table-cell>
              <fo:block>
                <fo:table width="100%" table-layout="fixed">
                  <fo:table-column column-width="16mm"/>
                  <fo:table-column column-width="16mm"/>

                  <fo:table-body>
                    <fo:table-row height="9mm">
                      @forms()
                      @sci()
                    </fo:table-row>
                  </fo:table-body>
                </fo:table>
              </fo:block>
            </fo:table-cell>
          </fo:table-row>

        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>

  <fo:table-cell number-columns-spanned="4" border-left-style="solid" border-left-width="1pt" border-left-color="black" border-right-style="solid" border-right-width="1pt" border-right-color="black" padding-top="-1mm" padding-left="1mm">
    <fo:block>
      @barcode(ie029Data.mrn)
    </fo:block>
  </fo:table-cell>
</fo:table-row>
