@import views.xml.componentsP5.table_1._
@import views.xml.componentsP5._

@(viewModel: viewmodels.P5.TableViewModel)

<fo:table-row height="16%">
  <fo:table-cell>
    <fo:block/>
  </fo:table-cell>

  <fo:table-cell padding-left="5%" text-align="center" vertical-align="top" border-top-style="solid" border-top-width="1pt" border-top-color="black" border-left-style="solid" border-left-width="1pt" border-left-color="black">
    <fo:block/>
  </fo:table-cell>SCI


  @consignor(viewModel.table1ViewModel.consignor, viewModel.table1ViewModel.consignorIdentificationNumber, viewModel.table1ViewModel.consignorContactPerson)

  <fo:table-cell>
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column/>

        <fo:table-body>

          <fo:table-row>
            <fo:table-cell>
              <fo:block>
                <fo:table width="100%" table-layout="fixed">

                  <fo:table-body>
                    <fo:table-row height="8%">
                      @declaration_type(viewModel.table1ViewModel.declarationType)
                      @additional_declaration_type(viewModel.table1ViewModel.additionalDeclarationType)
                    </fo:table-row>
                  </fo:table-body>
                </fo:table>
              </fo:block>
            </fo:table-cell>
          </fo:table-row>


          <fo:table-row>
            <fo:table-cell>
              <fo:block>
                <fo:table width="100%" table-layout="fixed">
                  <fo:table-body>
                    <fo:table-row height="8%">
                      @forms()
                      @sci(viewModel.table1ViewModel.sci)
                    </fo:table-row>
                  </fo:table-body>
                </fo:table>
              </fo:block>
            </fo:table-cell>
          </fo:table-row>

        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>

  <fo:table-cell number-columns-spanned="4" border-left-style="solid" border-left-width="1pt" border-left-color="black" border-right-style="solid" border-right-width="1pt" border-right-color="black" padding-left="1%">
    <fo:block>
      @barcode(viewModel.table1ViewModel.mrn)
    </fo:block>
    <fo:block text-align="center">
      @viewModel.table1ViewModel.mrn
    </fo:block>
  </fo:table-cell>
</fo:table-row>
