@import views.xml.components.box
@import views.xml.tad.components.inline_label
@import views.xml.tad.components.label
@import views.xml.components.empty_cell

@()

<fo:table-row>

    <fo:table-cell border-right-color="black" border-right-style="solid" border-right-width="1pt"
                   border-top-color="black" border-top-style="solid" border-top-width="1pt">
        @label("CERTIFICATION BY COMPETENT AUTHORITIES")
    </fo:table-cell>

    <fo:table-cell>
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="25%"/>
                <fo:table-column column-number="2" column-width="25%"/>
                <fo:table-column column-number="3" column-width="25%"/>
                <fo:table-column column-number="4" column-width="25%"/>
                <fo:table-column column-number="5" column-width="0%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2">
                            @label("New seals: Number:")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            @label("ID")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2">
                            @label("New seals: Number:")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            @label("ID")
                        </fo:table-cell>

                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="3">
                            @label("Signature:")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-rows-spanned="3"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            @label("Stamp:")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-rows-spanned="3">
                            @label("Signature:")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-rows-spanned="3"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            @label("Stamp:")
                        </fo:table-cell>

                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2" number-rows-spanned="2"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>@box() @inline_label("Data already recorded into the system")</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2" number-rows-spanned="2"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>@box() @inline_label("Data already recorded into the system")</fo:block>
                        </fo:table-cell>

                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        @empty_cell()
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
