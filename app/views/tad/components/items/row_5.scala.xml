@import views.xml.tad.components.label
@(
    departureTransportMeans: String,
    commodityCode: String,
    netMass: String
)

<fo:table-row>

    <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="50%"/>
                <fo:table-column column-number="2" column-width="32.5%"/>
                <fo:table-column column-number="3" column-width="17.5%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            @label("Departure transport means [19 05]")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            @label("Commodity Code [18 09]")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%">
                            @label("Net mass (kg) [18 01]")
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@departureTransportMeans</fo:block>
                            </fo:block-container>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@commodityCode</fo:block>
                            </fo:block-container>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%">
                            <fo:block-container overflow="hidden">
                                <fo:block>@netMass</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
