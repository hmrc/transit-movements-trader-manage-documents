@import views.xml.tad.components.label
@(
        declarationGoodsItemNumber: String,
        goodsItemNumber: String,
        packagesType: String,
        descriptionOfGoods: String
)

<fo:table-row>

    <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="12.5%"/>
                <fo:table-column column-number="2" column-width="10%"/>
                <fo:table-column column-number="3" column-width="27.5%"/>
                <fo:table-column column-number="4" column-width="50%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="2pt">
                            @label("Decl.goods it. Nr. [11 11]")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="2pt">
                            @label("Goods it. Nr [11 03]")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            @label("Type and number of packages, shipping marks [18 06]")
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%">
                            @label("Description of goods [18 05]")
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="2pt"
                                       border-bottom-color="black" border-bottom-style="solid" border-bottom-width="2pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@declarationGoodsItemNumber</fo:block>
                            </fo:block-container>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="2pt"
                                       border-bottom-color="black" border-bottom-style="solid" border-bottom-width="2pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@goodsItemNumber</fo:block>
                            </fo:block-container>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@packagesType</fo:block>
                            </fo:block-container>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%">
                            <fo:block-container overflow="hidden">
                                <fo:block>@descriptionOfGoods</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
