@import views.xml.components.box
@import viewmodels.tad.posttransition.Table4ViewModel

@(vm: Table4ViewModel)

<fo:table-row border-top-style="solid" border-top-width="2pt" border-top-color="black">

    <fo:table-cell number-columns-spanned="8">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="8%"/>
                <fo:table-column column-number="2" column-width="38%"/>
                <fo:table-column column-number="3" column-width="8%"/>
                <fo:table-column column-number="4" column-width="18%"/>
                <fo:table-column column-number="5" column-width="8%"/>
                <fo:table-column column-number="6" column-width="20%"/>
                <fo:table-column column-number="7" column-width="0%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell number-rows-spanned="10"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="4">
                            <fo:block>Country of routing of consignment [16 12]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt"
                                       border-bottom-color="black" border-bottom-style="solid" border-bottom-width="1pt"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block>Prescribed Itinerary [16 17]: @box(vm.bindingItinerary)</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="5"
                                       border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block-container overflow="hidden">
                                <fo:block>@(vm.countryOfRoutingOfConsignment)</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block font-size="5pt">CUSTOMS OFFICE OF TRANSIT [17 04]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="3"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block font-size="5pt">CUSTOMS OFFICE OF EXIT FOR TRANSIT [17 06]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2" number-rows-spanned="4"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black"
                                       border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
                            <fo:block-container overflow="hidden">
                                <fo:block>@(vm.customsOfficeOfTransitDeclared)</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="3" number-rows-spanned="4"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black"
                                       border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
                            <fo:block-container overflow="hidden">
                                <fo:block>@(vm.customsOfficeOfExitForTransitDeclared)</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block font-size="5pt">CUSTOMS OFFICE OF DEPARTURE [17 03]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="3"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block font-size="5pt">CUSTOMS OFFICE OF DESTINATION [17 05]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2">
                            <fo:block-container overflow="hidden">
                                <fo:block>@(vm.customsOfficeOfDeparture)</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                        <fo:table-cell border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="3"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block-container overflow="hidden">
                                <fo:block>@(vm.customsOfficeOfDestinationDeclared)</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-left-style="solid" border-left-width="1pt" border-left-color="black"
                                       border-top-style="solid" border-top-width="1pt" border-top-color="black">
                            <fo:block>Country of dispatch [16 06] @(vm.countryOfDispatch)</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-left-style="solid" border-left-width="1pt" border-left-color="black"
                                       border-top-style="solid" border-top-width="1pt" border-top-color="black"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block>Country of destination [16 03] @(vm.countryOfDestination)</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
