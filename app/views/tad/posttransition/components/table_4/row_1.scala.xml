@import views.xml.components.box
@import viewmodels.tad.posttransition.Table4ViewModel

@(vm: Table4ViewModel)

<fo:table-row border-top-style="solid" border-top-width="2pt" border-top-color="black">

    <fo:table-cell number-columns-spanned="2">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="2">
                            <fo:block/>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>


    <fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black"
                   number-columns-spanned="6">
        <fo:block>
            <fo:table width="100%" table-layout="fixed" border-right-style="solid"
                      border-right-width="1pt" border-right-color="black">

                <fo:table-body>

                    <fo:table-row>
                        <fo:table-cell margin-top="0.5%" margin-left="0.5%"
                                       number-columns-spanned="4" border-bottom-style="solid" border-bottom-width="1pt"
                                       border-bottom-color="black" padding-bottom="2.5%">
                            <fo:block>Country of routing of consignment [16 12]</fo:block>
                            <fo:block>@(vm.countryOfRoutingOfConsignment)</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-bottom="0.5%" margin-top="0.5%"
                                       margin-left="0.5%" border-bottom-style="solid" border-bottom-width="1pt"
                                       border-bottom-color="black">
                            <fo:block margin-left="0.5%" padding-top="0.5%" border-left-style="solid"
                                      border-left-width="1pt"
                                      border-left-color="black" border-bottom-style="solid" border-bottom-width="1pt"
                                      border-bottom-color="black" padding-left="5%" padding-bottom="2%">
                                Prescribed Itinerary [16 17]:
                                @box(vm.bindingItinerary)
                            </fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell number-columns-spanned="2">
                            <fo:block>
                                <fo:table width="121%" table-layout="fixed">
                                    <fo:table-body>
                                        <fo:table-row border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black"
                                                      border-right-style="solid" border-right-width="1pt" border-right-color="black">
                                            <fo:table-cell margin-left="1%" padding-bottom="11%">
                                                <fo:block font-size="5pt">CUSTOMS OFFICE OF TRANSIT [17 04]</fo:block>
                                                <fo:block>@(vm.customsOfficeOfTransitDeclared)</fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>
                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>
                        <fo:table-cell number-columns-spanned="3">
                            <fo:block>
                                <fo:table width="100%" table-layout="fixed">
                                    <fo:table-body>
                                        <fo:table-row>
                                            <fo:table-cell margin-left="15%">
                                                <fo:block font-size="5pt">
                                                    CUSTOMS OFFICE OF EXIT FOR TRANSIT [17 06]
                                                </fo:block>
                                                <fo:block>
                                                    @(vm.customsOfficeOfExitForTransitDeclared)
                                                </fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>
                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell number-columns-spanned="2">
                            <fo:block>
                                <fo:table width="121%" table-layout="fixed">
                                    <fo:table-body>
                                        <fo:table-row border-right-style="solid" border-right-width="1pt" border-right-color="black">
                                            <fo:table-cell margin-left="1%" padding-bottom="11%">
                                                <fo:block font-size="5pt">CUSTOMS OFFICE OF DEPARTURE [17 03]</fo:block>
                                                <fo:block>@(vm.customsOfficeOfDeparture)</fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>
                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>
                        <fo:table-cell number-columns-spanned="3">
                            <fo:block>
                                <fo:table width="100%" table-layout="fixed">
                                    <fo:table-body>
                                        <fo:table-row border-top-style="solid" border-top-width="1pt"
                                                      border-top-color="black">
                                            <fo:table-cell margin-left="15%">
                                                <fo:block font-size="5pt">CUSTOMS OFFICE OF DESTINATION [17 05]</fo:block>
                                                <fo:block>
                                                    @(vm.customsOfficeOfDestinationDeclared)
                                                </fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>
                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell number-columns-spanned="5" padding-left="34.5%">
                            <fo:block>
                                <fo:table width="100%" table-layout="fixed">
                                    <fo:table-body>
                                        <fo:table-row>
                                            <fo:table-cell>
                                                <fo:block/>
                                            </fo:table-cell>

                                            <fo:table-cell width="60mm" margin-left="1mm"
                                                           border-top-style="solid" border-top-width="1pt" border-top-color="black"
                                                           border-left-style="solid" border-left-width="1pt" border-left-color="black">
                                                <fo:block>Country of dispatch [16 06]
                                                    @(vm.countryOfDispatch)
                                                </fo:block>
                                            </fo:table-cell>
                                            <fo:table-cell width="60mm" margin-left="1mm"
                                                           border-top-style="solid" border-top-width="1pt" border-top-color="black"
                                                           border-left-style="solid" border-left-width="1pt" border-left-color="black">
                                                <fo:block>Country of destination [16 03]
                                                    @(vm.countryOfDestination)
                                                </fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>
                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>


                    </fo:table-row>


                </fo:table-body>

            </fo:table>
        </fo:block>
    </fo:table-cell>


</fo:table-row>
