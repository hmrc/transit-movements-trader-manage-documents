@import viewmodels.tad.posttransition.Table4ViewModel

@(vm: Table4ViewModel)

<fo:table-row border-top-style="solid" border-top-width="2pt" border-top-color="black">

    <fo:table-cell number-columns-spanned="2">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="44.8%"/>
                <fo:table-column column-number="2" column-width="27.6%"/>
                <fo:table-column column-number="3" column-width="13.8%"/>
                <fo:table-column column-number="4" column-width="13.8%"/>
                <fo:table-column column-number="5" column-width="0%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block font-size="5pt">CONTROL BY OFFICE OF DEPARTURE</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="3">
                            <fo:block font-size="5pt">CONTROL BY OFFICE OF DESTINATION</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>Result:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>Date of arrival:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2" number-rows-spanned="2">
                            <fo:block>Return copy sent on</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>Seals affixed: Number:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>Examination of seals:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>Identity:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2" number-rows-spanned="2">
                            <fo:block>after registration under ID</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>Limit date [15 11]: @(vm.limitDate)</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="2"
                                       border-right-color="black" border-right-style="solid" border-right-width="1pt">
                            <fo:block>Remarks:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%">
                            <fo:block>Signature:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%">
                            <fo:block>Stamp:</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
