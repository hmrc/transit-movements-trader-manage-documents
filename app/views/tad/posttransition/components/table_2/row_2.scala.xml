@(
    previousDocuments: String,
    transportDocuments: String
)

<fo:table-row>

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell number-columns-spanned="6"
                   border-color="black" border-style="solid" border-width="1pt">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="50%"/>
                <fo:table-column column-number="2" column-width="50%"/>
                <!-- This invisible column is a hack to allow bottom cells to span multiple rows-->
                <fo:table-column column-number="3" column-width="0%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%">
                            <fo:block>Previous Document [12 01]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>Transport document [12 05]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="3">
                            <fo:block-container overflow="hidden">
                                <fo:block>@previousDocuments</fo:block>
                            </fo:block-container>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-rows-spanned="3"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@transportDocuments</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                    <fo:table-row>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                    <fo:table-row>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
