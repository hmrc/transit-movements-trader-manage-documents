@(
    supportingDocuments: String,
    additionalReferences: String,
    transportCharges: String,
    additionalInformation: String
)

<fo:table-row>

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell number-columns-spanned="6"
                   border-color="black" border-style="solid" border-width="1pt">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="50%"/>
                <fo:table-column column-number="2" column-width="25%"/>
                <fo:table-column column-number="3" column-width="25%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%">
                            <fo:block>Supporting document [12 03]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>Additional reference [12 04]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell>
                            <fo:block>&#160;</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-rows-spanned="3">
                            <fo:block-container overflow="hidden">
                                <fo:block>@supportingDocuments</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-bottom-color="black" border-bottom-style="solid" border-bottom-width="1pt"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@additionalReferences</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>Additional information [12 02]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-bottom-color="black" border-bottom-style="solid" border-bottom-width="1pt"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>Transport charges [14 02] @transportCharges</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block-container overflow="hidden">
                                <fo:block>@additionalInformation</fo:block>
                            </fo:block-container>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
