                <fo:table-column column-number="3" column-width="35%"/>
                <fo:table-column column-number="4" column-width="15%"/>
                <fo:table-column column-number="5" column-width="0%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block font-size="5pt">CUSTOMS OFFICE OF INCIDENT REGISTRATION</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Incident code</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block font-size="5pt">CUSTOMS OFFICE OF INCIDENT REGISTRATION</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Incident code</fo:block>
                        </fo:table-cell>

                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Identity and Nationality new transport means</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Identity and Nationality new transport means</fo:block>
                        </fo:table-cell>

                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Container ID [19 07] @containerIdentification</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Container ID [19 07] @containerIdentification</fo:block>
                        </fo:table-cell>

                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2" number-rows-spanned="4"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Other incidents during carriage / Details and measures taken (text)</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2" number-rows-spanned="4"
                                       border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>Other incidents during carriage / Details and measures taken (text)</fo:block>
                        </fo:table-cell>

                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        @empty_cell()
                    </fo:table-row>

                    <fo:table-row>
                        @empty_cell()
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
