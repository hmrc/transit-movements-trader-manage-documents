@import views.xml.tad.posttransition.components.table_1.consignee
@import views.xml.tad.posttransition.components.table_1.total_gross_mass

@(
    consignees: String,
    consigneeIdentificationNumbers: String,
    totalItems: String,
    totalPackages: String,
    totalGrossMass: String,
    securityString: String
)

<fo:table-row>

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell text-align="center" vertical-align="top"
                   border-left-style="solid" border-left-width="2pt" border-left-color="black"
                   border-right-style="solid" border-right-width="2pt" border-right-color="black">
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell number-columns-spanned="6"
                   border-color="black" border-style="solid" border-width="1pt">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="25%"/>
                <fo:table-column column-number="2" column-width="25%"/>
                <fo:table-column column-number="3" column-width="10%"/>
                <fo:table-column column-number="4" column-width="10%"/>
                <fo:table-column column-number="5" column-width="15%"/>
                <fo:table-column column-number="6" column-width="15%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%">
                            <fo:block>Consignee [13 03]</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%">
                            <fo:block>ID @consigneeIdentificationNumbers</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>Total items</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>Total packages</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>Total gross mass (Kg)</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="2pt"
                                       border-right-color="black" border-right-style="solid" border-right-width="2pt"
                                       border-top-color="black" border-top-style="solid" border-top-width="2pt">
                            <fo:block>Security [11 07]</fo:block>
                        </fo:table-cell>
                    </fo:table-row>

                    <fo:table-row>
                        <fo:table-cell margin-left="0.5%" number-columns-spanned="2">
                            <fo:block>@consignees</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>@totalItems</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>@totalPackages</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="1pt">
                            <fo:block>@totalGrossMass</fo:block>
                        </fo:table-cell>
                        <fo:table-cell margin-left="0.5%"
                                       border-left-color="black" border-left-style="solid" border-left-width="2pt"
                                       border-right-color="black" border-right-style="solid" border-right-width="2pt"
                                       border-bottom-color="black" border-bottom-style="solid" border-bottom-width="2pt">
                            <fo:block>@securityString</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
