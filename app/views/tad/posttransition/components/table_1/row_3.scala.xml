@import views.xml.tad.posttransition.components.table_1.consignee
@import views.xml.tad.posttransition.components.table_1.total_gross_mass

@(
    consignees: String,
    consigneeIdentificationNumbers: String,
    totalItems: String,
    totalPackages: String,
    totalGrossMass: String,
    securityString: String
)

<fo:table-row>

    <fo:table-cell>
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell text-align="center" vertical-align="top"
                   border-left-style="solid" border-left-width="2pt" border-left-color="black"
                   border-right-style="solid" border-right-width="2pt" border-right-color="black">
        <fo:block/>
    </fo:table-cell>

    <fo:table-cell number-columns-spanned="6">
        <fo:block>
            <fo:table width="100%" table-layout="fixed">
                <fo:table-column column-number="1" column-width="50%"/>
                <fo:table-column column-number="2" column-width="50%"/>
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
                            <fo:block>
                                <fo:table width="100%" table-layout="fixed">
                                    <fo:table-column column-number="1" column-width="50%"/>
                                    <fo:table-column column-number="2" column-width="50%"/>
                                    <fo:table-body>
                                        <fo:table-row>
                                            <fo:table-cell margin-left="0.5%">
                                                <fo:block>Consignee [13 03]</fo:block>
                                                <fo:block>@consignees</fo:block>
                                            </fo:table-cell>
                                            <fo:table-cell margin-left="0.5%">
                                                <fo:block>ID</fo:block>
                                                <fo:block>@consigneeIdentificationNumbers</fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>
                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>

                        <fo:table-cell>
                            <fo:block>
                                <fo:table width="100%" table-layout="fixed">
                                    <fo:table-column column-number="1" column-width="17%"/>
                                    <fo:table-column column-number="2" column-width="22%"/>
                                    <fo:table-column column-number="3" column-width="31%"/>
                                    <fo:table-column column-number="4" column-width="30%"/>
                                    <fo:table-body>
                                        <fo:table-row>
                                            <fo:table-cell border-color="black" border-style="solid" border-width="1pt"
                                                           margin-left="0.5%">
                                                <fo:block>Total items</fo:block>
                                                <fo:block>@totalItems</fo:block>
                                            </fo:table-cell>
                                            <fo:table-cell border-color="black" border-style="solid" border-width="1pt"
                                                           margin-left="0.5%">
                                                <fo:block>Total packages</fo:block>
                                                <fo:block>@totalPackages</fo:block>
                                            </fo:table-cell>
                                            <fo:table-cell border-color="black" border-style="solid" border-width="1pt"
                                                           margin-left="0.5%">
                                                <fo:block>Total gross mass (Kg)</fo:block>
                                                <fo:block>@totalGrossMass</fo:block>
                                            </fo:table-cell>

                                            <fo:table-cell border-color="black" border-style="solid" border-width="2pt"
                                                           margin-left="0.5%">
                                                <fo:block>Security [11 07]</fo:block>
                                                <fo:block>@securityString</fo:block>
                                            </fo:table-cell>
                                        </fo:table-row>
                                    </fo:table-body>
                                </fo:table>
                            </fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:block>
    </fo:table-cell>
</fo:table-row>
