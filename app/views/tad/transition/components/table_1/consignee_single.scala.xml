@import viewmodels.p4.tad.Table1ViewModel.ConsigneeViewModel

@(vm: ConsigneeViewModel)

<fo:table-row height="6.25mm">
  <fo:table-cell padding-left="2mm" display-align="center">
    <fo:block>8 Consignee</fo:block>
  </fo:table-cell>
  <fo:table-cell padding-left="2mm" display-align="center">
    <fo:block>No</fo:block>
  </fo:table-cell>
  <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
    <fo:block>
      @vm.eori
    </fo:block>
  </fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell padding-left="2mm" number-columns-spanned="3" font-weight="bold" display-align="center">
  <fo:block>
    @vm.name
  </fo:block>
</fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell number-columns-spanned="2" padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @vm.streetAndNumber
  </fo:block>
</fo:table-cell>
<fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @vm.postcode
  </fo:block>
</fo:table-cell>
</fo:table-row>
<fo:table-row height="6.25mm">
<fo:table-cell number-columns-spanned="2" padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @vm.city
  </fo:block>
</fo:table-cell>
<fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
  <fo:block>
    @vm.country
  </fo:block>
</fo:table-cell>
</fo:table-row>
