@import viewmodels.tad.transition.SecurityViewModel.SealsViewModel


@(
  seals: SealsViewModel
)

<fo:table-row height="15mm">
  <fo:table-cell alignment-adjust="auto" number-columns-spanned="6" padding-top = "1mm"  border-right-style="solid" border-right-width="1pt" border-right-color="black"  border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black"  border-left-style="solid" border-left-width="1pt" border-left-color="black">
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-number="1" column-width="29mm"/>
        <fo:table-column column-number="2" column-width="29mm"/>
        <fo:table-column column-number="3" column-width="80mm"/>
        <fo:table-body>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center">
              <fo:block>SEAL <fo:inline font-size="6px">(S28)</fo:inline> &#160;&#160;&#160;&#160;[1910]</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center">
              <fo:block>Sequence number</fo:block>
            </fo:table-cell>
            <fo:table-cell padding-left="2mm" display-align="center" >
              <fo:block>Number of seals</fo:block>
            </fo:table-cell>
            <fo:table-cell padding-left="2mm" display-align="center" >
              <fo:block>Identifier</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4.25mm">
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@seals.sequenceNumbers</fo:block>
            </fo:table-cell>
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@seals.numberOfSeals</fo:block>
            </fo:table-cell>
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>@seals.identifiers</fo:block>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>
</fo:table-row>
