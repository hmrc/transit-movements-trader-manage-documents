@import viewmodels.tad.transition.SecurityViewModel._


@(
        placeOfLoading: PlaceOfLoadingViewModel
)

<fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black" border-right-style="solid" border-right-width="1pt" border-right-color="black" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
  <fo:block>
    <fo:table  width="100%" table-layout="fixed" >
      <fo:table-column column-number="1" column-width="33mm"/>
      <fo:table-column column-number="2" column-width="30mm"/>
      <fo:table-body>
        <fo:table-row display-align="before"   >
          <fo:table-cell  padding-left="2mm" number-columns-spanned="2" padding-top = "2mm">
            <fo:block>PLACE OF LOADING <fo:inline font-size="6px">(S17)</fo:inline> &#160;&#160;&#160; [1613]</fo:block>
          </fo:table-cell>
        </fo:table-row>
        <fo:table-row display-align="before" >
          <fo:table-cell  padding-left="2mm" number-columns-spanned="2" padding-top = "2mm">
            <fo:block>UNLOCODE &#160;&#160;&#160;<fo:inline font-weight = "bold">@placeOfLoading.unLocode</fo:inline></fo:block>
          </fo:table-cell>
        </fo:table-row>
        <fo:table-row display-align="before" >
          <fo:table-cell  padding-top="2mm" padding-left="2mm"  number-columns-spanned="2">
            <fo:block>Country &#160;&#160;&#160;<fo:inline font-weight="bold">@placeOfLoading.country</fo:inline></fo:block>
          </fo:table-cell>
        </fo:table-row>
        <fo:table-row display-align="before" >
          <fo:table-cell  padding-top="2mm" padding-left="2mm" number-columns-spanned="2">
            <fo:block>Location &#160;&#160;&#160;<fo:inline font-weight="bold">@placeOfLoading.location</fo:inline></fo:block>
          </fo:table-cell>
        </fo:table-row>

      </fo:table-body>
    </fo:table>
  </fo:block>
</fo:table-cell>
