@(permission: viewmodels.PermissionToStartUnloading)

<fo:table-cell border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" number-columns-spanned="2" padding-top="2mm" font-weight="bold">
    @if(!permission.printListOfItems) {
    <fo:table width="100%">
        <fo:table-column column-width="74mm"/>
        <fo:table-column column-width="74mm"/>
        <fo:table-body>
            <fo:table-row>
                <fo:table-cell padding-left="2mm">
                    @permission.goodsItems.head.specialMentions.map(specialMention => item.special_mentions(specialMention))
                </fo:table-cell>
                <fo:table-cell padding-left="3mm">
                    @permission.goodsItems.head.producedDocuments.map(producedDocument => item.produced_document(producedDocument))
                </fo:table-cell>
            </fo:table-row>
        </fo:table-body>
    </fo:table>
    } else {
        <fo:block/>
    }
</fo:table-cell>
<fo:table-cell border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" border-left-style="solid" border-left-width="1pt" border-left-color="black">
<fo:block/>
</fo:table-cell>