@(permission: viewmodels.PermissionToStartUnloading)

<fo:table width="100%" table-layout="fixed"> <!-- S1 TABLE 2 -->
    <fo:table-column column-width="16mm"/>
    <fo:table-column column-width="115mm"/>
    <fo:table-column column-width="33mm"/>
    <fo:table-column column-width="36mm"/>
    <fo:table-body>
        <fo:table-row height="32mm"> <!-- S1 T2 ROW 1-->

            <!--Commodity marks/containers/items-->
            @left_block(permission)

            <!--Commodity code/weight/documents-->
            @right_block(permission)

        </fo:table-row>

        <fo:table-row height="4mm"> <!-- S1 T2 ROW 3 -->
            <fo:table-cell border-top-style="solid" border-top-width="1pt" border-top-color="black" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" number-rows-spanned="2" wrap-option="wrap" padding-top="1mm" border-right-style="solid" border-right-width="1pt" border-right-color="black">
                <fo:block>
                    <fo:list-block>
                        <fo:list-item>
                            <fo:list-item-label>
                                <fo:block>
                                    44
                                </fo:block>
                            </fo:list-item-label>
                            <fo:list-item-body start-indent="3mm" end-indent="1mm">
                                <fo:block font-size="6pt">Additional information/ Documents produced/ Certificates and authori- sations</fo:block>
                            </fo:list-item-body>
                        </fo:list-item>
                    </fo:list-block>
                </fo:block>
            </fo:table-cell>
            <fo:table-cell margin-left="2mm">
                <fo:block/>
            </fo:table-cell>
            <fo:table-cell border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" border-left-style="solid" border-left-width="1pt" border-left-color="black">
                <fo:block/>
            </fo:table-cell>
            @* TODO: Missing Node - Where is /HEAHEA/BinItiHEA246 from? Looks like it's a message from Release for Transit (IE029) *@
        </fo:table-row>

        <fo:table-row height="16mm"> <!-- S1 T2 ROW 4 -->
            <fo:table-cell border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" number-columns-spanned="2" padding-top="2mm" font-weight="bold">
                @if(!permission.printListOfItems) {
                    <fo:table width="100%">
                        <fo:table-column column-width="74mm"/>
                        <fo:table-column column-width="74mm"/>
                        <fo:table-body>
                            <fo:table-row>
                                <fo:table-cell padding-left="2mm">
                                    @permission.goodsItems.head.specialMentions.map( specialMention => special_mentions(specialMention))
                                </fo:table-cell>
                                <fo:table-cell padding-left="3mm">
                                    @permission.goodsItems.head.producedDocuments.map(producedDocument => produced_document(producedDocument))
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                }
            </fo:table-cell>
            <fo:table-cell border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" border-left-style="solid" border-left-width="1pt" border-left-color="black">
                <fo:block/>
            </fo:table-cell>
        </fo:table-row>
    </fo:table-body>
</fo:table>
