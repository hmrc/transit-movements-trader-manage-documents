@(customsOfficeTransit: viewmodels.CustomsOfficeTransit)

<fo:table-cell border-left-color="black" border-left-style="solid" border-left-width="1pt" display-align="center" font-weight="bold" padding-left="2mm">
    <fo:block>
        <fo:inline font-style="italic">
            @customsOfficeTransit.referenceNumber
        </fo:inline>
    </fo:block>
    <fo:block>
        <fo:inline font-style="italic">
            @if(customsOfficeTransit.dateTimeFormatted.nonEmpty) {
                @customsOfficeTransit.dateTimeFormatted.map(dateTime => dateTime)
            } else {
                &#160;
            }
        </fo:inline>
    </fo:block>
</fo:table-cell>
