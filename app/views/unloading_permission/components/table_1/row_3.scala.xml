@(permission: viewmodels.PermissionToStartUnloading)

<fo:table-row height="8mm">
  <fo:table-cell>
    <fo:block/>
  </fo:table-cell>
  <fo:table-cell number-rows-spanned="5" border-left-style="solid" border-left-width="1pt" border-left-color="black" border-right-style="solid" border-right-width="1pt" border-right-color="black" display-align="center" padding-top="-10mm">
    <fo:block>
      SVG here
    </fo:block>
  </fo:table-cell>
  <fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black">
    <fo:block>
      @if(!permission.printVariousConsignors) {
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-number="1" column-width="44mm"/>
        <fo:table-column column-number="2" column-width="8mm"/>
        <fo:table-column column-number="3" column-width="37mm"/>
        <fo:table-body>
          <fo:table-row height="5mm">
            <fo:table-cell number-columns-spanned="2" padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>
                @permission.consignor.map(_.city)
              </fo:block>
            </fo:table-cell>
            <fo:table-cell padding-left="2mm" display-align="center" font-weight="bold">
              <fo:block>
                @permission.consignor.map(_.country.code)
              </fo:block>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
      }
    </fo:block>
  </fo:table-cell>
  <fo:table-cell alignment-adjust="auto" border-style="solid" border-width="1pt" border-color="black" number-columns-spanned="3">
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-width="16mm"/>
        <fo:table-column border-left-width="1pt" border-left-style="solid" border-left-color="black"/>
        <fo:table-body>
          <fo:table-row height="4mm">
            <fo:table-cell display-align="center" text-align="center">
              <fo:block>5 Items</fo:block>
            </fo:table-cell>
            <fo:table-cell padding-left="2mm" text-align="left" display-align="center">
              <fo:block>6 Total packages</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4mm">
            <fo:table-cell text-align="center" display-align="center" font-weight="bold">
              <fo:block>
                @permission.numberOfItems
              </fo:block>
            </fo:table-cell>
            <fo:table-cell text-align="center" display-align="center" font-weight="bold">
              <fo:block>
                @permission.numberOfPackages
              </fo:block>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>
  <fo:table-cell>
    <fo:block/>
  </fo:table-cell>
  <fo:table-cell>
    <fo:block/>
  </fo:table-cell>
</fo:table-row>
