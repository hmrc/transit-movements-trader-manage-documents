@(permission: viewmodels.PermissionToStartUnloading)

<fo:table-row height="8mm">
  <fo:table-cell>
    <fo:block/>
  </fo:table-cell>
  <fo:table-cell border-left-style="solid" border-left-width="1pt" border-left-color="black">
    <fo:block/>
  </fo:table-cell>
  <fo:table-cell number-columns-spanned="4">
    <fo:block/>
  </fo:table-cell>
  <fo:table-cell alignment-adjust="auto" border-left-style="solid" border-left-width="1pt" border-left-color="black" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black" border-top-style="solid" border-top-width="1pt" border-top-color="black">
    <fo:block>
      <fo:table width="100%" table-layout="fixed">
        <fo:table-column/>
        <fo:table-body>
          <fo:table-row height="4mm">
            <fo:table-cell padding-left="2mm" display-align="center">
              <fo:block>17 Country of destination</fo:block>
            </fo:table-cell>
          </fo:table-row>
          <fo:table-row height="4mm">
            <fo:table-cell text-align="center" font-weight="bold" display-align="center">
              <fo:block>
                @permission.countryOfDestination.map(country => country.code).getOrElse("---")
              </fo:block>
            </fo:table-cell>
          </fo:table-row>
        </fo:table-body>
      </fo:table>
    </fo:block>
  </fo:table-cell>
</fo:table-row>
