@this()

@(permission: viewmodels.TransitDocument)
<?xml version='1.0' encoding='utf-8'?>

<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format" font-family="sans-serif" font-size="7pt" text-align="left">

  @components.layout_master_set()

  <fo:page-sequence master-reference="top-page" initial-page-number="1" force-page-count="no-force">
    <fo:flow flow-name="xsl-region-body">
      <fo:block>

        <!--main header-->
        @components.table_1.table(permission)

        <!--packages/goods description/docs/certs-->
        @components.table_2.table(permission)

        <!--transhipment/certification-->
        @components.table_3.table(permission)

        <!--Principal/TIR Holder/Office of departure-->
        @components.table_4.table(permission)

        <!--control by office of departure/destination-->
        @components.table_5.table(permission)

      </fo:block>
    </fo:flow>
  </fo:page-sequence>
  @if(permission.printListOfItems) {
    <!-- goods items -->
    @components.second_page.table(permission)
  }
</fo:root>
