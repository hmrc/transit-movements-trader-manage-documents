@import refactor.views.xml.p5.components.items._
@import refactor.viewmodels.p5.tad.ConsignmentItemViewModel

@this()

@(items: Seq[ConsignmentItemViewModel], mrn: String)
<fo:page-sequence master-reference="pages" initial-page-number="2" force-page-count="no-force">
    <fo:static-content flow-name="xsl-region-before">
        @header(mrn)
    </fo:static-content>
    <fo:flow flow-name="xsl-region-body">
        <fo:block>
            @items.map(table(_))
        </fo:block>
        <fo:block id="tloi-pages"/>
    </fo:flow>
</fo:page-sequence>