@import refactor.views.xml.p5.tad.components.table_1.consignee

@import refactor.views.xml.p5.tad.components.table_1.total_gross_mass

@import refactor.viewmodels.p5.tad.Table4ViewModel


@(vm: Table4ViewModel)

<fo:table-row height="16mm">


    <fo:table-cell
            number-columns-spanned="8">
        <fo:block>
            <fo:table width="100%">

                <fo:table-body>

                    <fo:table-row height="4mm">
                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm" padding-top="2mm"
                                       width="80mm">
                            <fo:block>CONTROL BY CUSTOMS OFFICE OF DEPARTURE</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm" padding-top="2mm"
                                       border-left-style="solid" border-left-width="1pt"
                                       border-left-color="black"
                                       width="190px">


                            <fo:block>CONTROL BY CUSTOMS OFFICE OF DESTINATION</fo:block>
                        </fo:table-cell>

                    </fo:table-row>

                    <fo:table-row height="5mm">
                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm">


                            <fo:block>Result:</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       border-left-style="solid" border-left-width="1pt" border-left-color="black"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block  >Date of arrival</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       number-columns-spanned="4">
                            <fo:block>Return copy sent on</fo:block>
                        </fo:table-cell>

                    </fo:table-row>

                    <fo:table-row height="5mm">
                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm">


                            <fo:block>Seals affixed number:</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       border-left-style="solid" border-left-width="1pt" border-left-color="black"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block  >Examination of seals:</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       number-columns-spanned="4">
                            <fo:block></fo:block>
                        </fo:table-cell>

                    </fo:table-row>

                    <fo:table-row height="5mm">
                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm">


                            <fo:block>Identity:</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       border-left-style="solid" border-left-width="1pt" border-left-color="black"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block  ></fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       number-columns-spanned="4">
                            <fo:block>after registration under ID</fo:block>
                        </fo:table-cell>

                    </fo:table-row>

                    <fo:table-row height="5mm">
                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm">


                            <fo:block>Limit date[15 11]: @vm.limitDate</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       border-left-style="solid" border-left-width="1pt" border-left-color="black"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block  >Remarks:</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       number-columns-spanned="4">
                            <fo:block></fo:block>
                        </fo:table-cell>

                    </fo:table-row>

                    <fo:table-row height="5mm">
                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm">


                        <fo:block></fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       border-left-style="solid" border-left-width="1pt" border-left-color="black"
                                       border-right-style="solid" border-right-width="1pt" border-right-color="black">
                            <fo:block></fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       number-columns-spanned="4">
                            <fo:block>Signature:</fo:block>
                        </fo:table-cell>

                        <fo:table-cell margin-top="0.5mm" display-align="top" margin-left="0.5mm"
                                       number-columns-spanned="4">
                            <fo:block>Stamp:</fo:block>
                        </fo:table-cell>

                    </fo:table-row>

                </fo:table-body>

            </fo:table>
        </fo:block>
    </fo:table-cell>


</fo:table-row>
