@import refactor.viewmodels.p4.tad.SecurityViewModel.ContactPersonViewModel


@(
carrierContactPerson: ContactPersonViewModel
)

<fo:table-cell display-align="center" border-left-style="solid" border-left-width="1pt" border-left-color="black" border-right-style="solid" border-right-width="1pt" border-right-color="black" border-bottom-style="solid" border-bottom-width="1pt" border-bottom-color="black">
  <fo:block>
    <fo:table width="100%" table-layout="fixed">
      <fo:table-column column-number="1" column-width="29mm"/>
      <fo:table-column column-number="2" column-width="29mm"/>
      <fo:table-column column-number="3" column-width="29mm"/>
      <fo:table-body>
        <fo:table-row display-align="before" height="5.33mm">
          <fo:table-cell  padding-left="2mm">
            <fo:block>Name</fo:block>
          </fo:table-cell>
          <fo:table-cell  padding-left="2mm">
            <fo:block>Phone Number</fo:block>
          </fo:table-cell>
          <fo:table-cell  padding-left="8mm">
            <fo:block>E-mail address</fo:block>
          </fo:table-cell>
        </fo:table-row>
        <fo:table-row display-align="before" height="5.33mm">
          <fo:table-cell  padding-left="2mm" font-weight="bold">
            <fo:block>@carrierContactPerson.name</fo:block>
          </fo:table-cell>
          <fo:table-cell  padding-left="2mm" font-weight="bold">
            <fo:block>@carrierContactPerson.phoneNumber</fo:block>
          </fo:table-cell>
        </fo:table-row>
      </fo:table-body>
    </fo:table>
  </fo:block>
</fo:table-cell>
