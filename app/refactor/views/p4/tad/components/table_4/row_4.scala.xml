@import viewmodels.CustomsOfficeWithOptionalDate
@import refactor.viewmodels.p4.tad.Table4ViewModel._

@(
    guaranteeType: String,
    destination: Option[TransitOfficeViewModel]
)

<fo:table-cell >
    <fo:block>
        <fo:list-block>
            <fo:list-item>
                <fo:list-item-label>
                    <fo:block>
                        52
                    </fo:block>
                </fo:list-item-label>
                <fo:list-item-body start-indent="3mm" end-indent="0mm">
                    <fo:block wrap-option="wrap">Guarantee not valid for</fo:block>
                </fo:list-item-body>
            </fo:list-item>
        </fo:list-block>
    </fo:block>
</fo:table-cell>
<fo:table-cell border-right-style="solid" border-right-width="1pt" border-right-color="black" border-top-style="solid" border-top-width="1pt" border-top-color="black" >
    <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-width="114.64mm"/>
        <fo:table-column column-width="8mm"/>
        <fo:table-body>
            <fo:table-row>
                <fo:table-cell number-rows-spanned="2">
                    <fo:block>
                        <fo:table width="100%" table-layout="fixed">
                            <fo:table-column column-width="38.213mm"/>
                            <fo:table-column column-width="38.213mm"/>
                            <fo:table-column column-width="38.213mm"/>
                            <fo:table-body>
                                <fo:table-row height="2mm">
                                    <fo:table-cell>
                                        <fo:block/>
                                    </fo:table-cell>
                                </fo:table-row>
                                <fo:table-row>
                                    <fo:table-cell>
                                        <fo:block/>
                                    </fo:table-cell>
                                </fo:table-row>
                            </fo:table-body>
                        </fo:table>
                    </fo:block>
                </fo:table-cell>
                <fo:table-cell text-align="center" display-align="center">
                    <fo:block>Code</fo:block>
                </fo:table-cell>
            </fo:table-row>
            <fo:table-row>
                <fo:table-cell display-align="center" border-left-style="solid" border-left-width="1pt" border-left-color="black" text-align="center">
                    <fo:block>
                        @guaranteeType
                    </fo:block>
                </fo:table-cell>
            </fo:table-row>
        </fo:table-body>
    </fo:table>
</fo:table-cell>
<fo:table-cell border-top-style="solid" border-top-width="1pt" border-top-color="black">
    <fo:block>
        <fo:table width="100%" table-layout="fixed">
            <fo:table-column/>
            <fo:table-body>
                <fo:table-row height="2mm">
                    <fo:table-cell padding-left="2mm" display-align="center">
                        <fo:block>53 Office of destination (and country)</fo:block>
                    </fo:table-cell>
                </fo:table-row>
                <fo:table-row height="2mm">
                    <fo:table-cell padding-left = "2mm" display-align="center" font-weight="bold">
                        @destination.map{ des =>
                            <fo:block>@des.reference</fo:block>
                        }.getOrElse(
                            <fo:block />
                        )
                    </fo:table-cell>
                </fo:table-row>
            </fo:table-body>
        </fo:table>
    </fo:block>
</fo:table-cell>