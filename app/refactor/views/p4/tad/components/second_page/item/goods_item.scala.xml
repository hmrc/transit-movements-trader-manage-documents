@import refactor.views.xml.p4.tad.components.second_page.item._
@import refactor.views.xml.p4.tad.components.{item => componentItem}
@import refactor.viewmodels.p4.tad.ConsignmentItemViewModel

@(
    vm: ConsignmentItemViewModel
)
<fo:table width="100%" table-layout="fixed">
    <fo:table-column column-width="28mm"/>
    <fo:table-column column-width="28mm"/>
    <fo:table-column column-width="28mm"/>
    <fo:table-column column-width="28mm"/>
    <fo:table-column column-width="78mm"/>
    <fo:table-body>
        <fo:table-row height="3.5mm">
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" display-align="center" padding-left="2mm">
                <fo:block>
                    @vm.itemNumber
                </fo:block>
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                @vm.shippingMarks.map(block(_))
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                <fo:block/>
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                @vm.containers.map(block(_))
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                <fo:block>
                    @vm.description
                </fo:block>
            </fo:table-cell>
        </fo:table-row>
        <fo:table-row height="3.5mm">
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                <fo:block>
                    @vm.declarationType
                </fo:block>
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                <fo:block>
                   @vm.commodityCode
                </fo:block>
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                @vm.sensitiveGoodsInformation.map(_.goodsCode).map(block(_))
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                @vm.sensitiveGoodsInformation.map(_.quantity).map(block(_))
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                @vm.previousDocuments.map(block(_))
            </fo:table-cell>
        </fo:table-row>
        <fo:table-row height="3.5mm">
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                @block(vm.countryOfDispatch)
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                @block(vm.countryOfDestination)
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                <fo:block>
                    @vm.grossMass
                </fo:block>
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" padding-left="2mm" display-align="center">
                <fo:block>
                    @vm.netMass
                </fo:block>
            </fo:table-cell>
            <fo:table-cell border-style="solid" border-width="1pt" border-color="black" display-align="center" padding-top="0.5mm">
                <fo:table width="100%">
                    <fo:table-column column-width="30mm"/>
                    <fo:table-column column-width="39mm"/>
                    <fo:table-body>
                        <fo:table-row>
                            <fo:table-cell padding-left="2mm">
                                @vm.specialMentions.map(_.map(componentItem.special_mentions(_))).getOrElse(<fo:block>--</fo:block>)
                            </fo:table-cell>
                            <fo:table-cell padding-left="2mm">
                                @vm.producedDocuments.map(_.map(produced_document(_))).getOrElse(<fo:block>--</fo:block>)
                            </fo:table-cell>
                        </fo:table-row>
                    </fo:table-body>
                </fo:table>
            </fo:table-cell>
        </fo:table-row>
        <fo:table-row height="3.5mm">
            <fo:table-cell border-bottom-style="solid" border-bottom-width="1.25pt" border-bottom-color="black" number-columns-spanned="5">
                <fo:block>
                    <fo:table width="100%" table-layout="fixed">
                        <fo:table-column column-width="95mm"/>
                        <fo:table-column column-width="95mm"/>
                        <fo:table-body>
                            <fo:table-row height="3.5mm">
                                <fo:table-cell border-style="solid" border-width="1pt" border-color="black" display-align="center" padding-left="2mm">
                                    @vm.consignorViewModel.map(consignor(_)).getOrElse(<fo:block>---</fo:block>)
                                </fo:table-cell>
                                <fo:table-cell border-style="solid" border-width="1pt" border-color="black" display-align="center" padding-left="2mm">
                                    @vm.consigneeViewModel.map(consignee(_)).getOrElse(<fo:block>---</fo:block>)
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                </fo:block>
            </fo:table-cell>
        </fo:table-row>
    </fo:table-body>
</fo:table>