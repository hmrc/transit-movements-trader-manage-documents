@import refactor.viewmodels.p4.tad.ConsignmentItemViewModel

@(vm: ConsignmentItemViewModel)

@vm.packages.headOption.map { packageViewModel =>
    <fo:table width="100%" table-layout="fixed">
        <fo:table-column column-width="20mm"/>
        <fo:table-column column-width="25mm"/>
        <fo:table-column column-width="15mm"/>
        <fo:table-column column-width="25mm"/>
        <fo:table-column column-width="25mm"/>
        <fo:table-body>
            <fo:table-row height="15mm" padding-top="1mm">
                <fo:table-cell font-weight="bold" wrap-option="wrap">
                    <fo:block>
                        <!--Marks and numbers-->
                        @packageViewModel.toString
                    </fo:block>
                </fo:table-cell>
                <fo:table-cell font-weight="bold" padding-left="3mm" wrap-option="wrap">
                    <!-- Container No(s) -->
                    <fo:block>
                        @vm.containers.headOption
                    </fo:block>
                </fo:table-cell>
                <fo:table-cell font-weight="bold" padding-left="3mm" wrap-option="wrap">
                    <!-- Number and kind -->
                    <fo:block>
                        <fo:inline font-style="italic">
                            @packageViewModel.toString
                        </fo:inline>
                    </fo:block>
                    <!-- Number of pieces -->
                    @if(packageViewModel.numberOfPackages > 0) {
                        <fo:block font-weight="normal">
                            <fo:inline font-weight="bold">
                                Pieces @packageViewModel.numberOfPackages
                            </fo:inline>
                        </fo:block>
                    }
                </fo:table-cell>
                <!-- Sensitive goods code -->
                @vm.sensitiveGoodsInformation.headOption.map { sgi =>
                    <fo:table-cell font-weight="bold" padding-left="3mm" wrap-option="wrap">
                        <fo:block>
                            <fo:inline font-weight="normal">Sensitive Goods code:</fo:inline>
                            @sgi.goodsCode
                        </fo:block>
                    </fo:table-cell>

                    <!-- Sensitive goods quantity -->
                    <fo:table-cell font-weight="bold" padding-left="3mm" wrap-option="wrap">
                        <fo:block>
                            <fo:inline font-weight="normal">Sensitive Quantity:</fo:inline>
                            @sgi.quantity
                        </fo:block>
                    </fo:table-cell>
                }
            </fo:table-row>
            <!-- Description -->
            <fo:table-row padding-top="1mm">
                <fo:table-cell number-columns-spanned="5" font-weight="bold" wrap-option="wrap">
                    <fo:block>
                        @vm.description
                    </fo:block>
                </fo:table-cell>
            </fo:table-row>
        </fo:table-body>
    </fo:table>
}